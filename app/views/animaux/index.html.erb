<!-- app/views/animaux/index.html.erb -->
<h2>Liste des animaux</h2>
<div class="container">
<% @animaux_par_enclos.each do |espece, enclos| %>
  <h2><%= espece %></h2>
  <p>Enclos : <%= enclos %></p>
  <ul>
    <% @animaux.each do |animal| %>
      <% if animal['espece'] == espece %>
        <li><%= animal['nom'] %></li>
        <!-- Vous pouvez afficher d'autres détails de l'animal ici -->
      <% end %>
    <% end %>
  </ul>
<% end %>
<% if current_user && current_user.is_admin? %>
  <%= link_to "Ajouter un animal", new_api_animaux_path, class: "mb-3"%>

  <%= button_to "Réinitialiser animaux.json", api_reset_animaux_path, method: :post, class: "mb-3" %>
<% end %>
</div>