<div class="container">

<% @animaux_par_espece.each do |espece, animaux| %>
  <% if espece.present? %>
    <h2><%= espece.nom %></h2>
    <% if espece.enclo.present? %>
      <p>Enclos: <%= espece.enclo.nom %></p>
      <p>Superficie: <%= espece.enclo.superficie %> m²</p>
    <% else %>
      <p>Aucun enclos associé à cette espèce.</p>
    <% end %>

    <ul>
      <% animaux.each do |animal| %>
        <li><%= animal.nom %></li>
        <!-- Autres détails de l'animal ici -->
      <% end %>
    </ul>
  <% else %>
  <h2>Information sur l'espèce indisponible.</h2>
      <% animaux.each do |animal| %>
        <li><%= animal.nom %> - <%= animal.espece %> </li>
        <% end %>
  <% end %>
<% end %>


<% if current_user && current_user.is_admin? %>
  <%= link_to "Ajouter un animal", new_api_animaux_path, class: "mb-3"%>

  <%= button_to "Réinitialiser animaux.json", api_reset_animaux_path, method: :post, class: "mb-3" %>
<% end %>
</div>