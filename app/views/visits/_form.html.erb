<div class="container">
  <%= form_with model: visit do |form| %>

  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% visit.errors.full_messages_for(:title).each do |message| %> 
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
    <% visit.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
  <div>
  <%= form.label :status %><br>
  <%= form.select :status, Visible::VALID_STATUSES, selected: visit.status || 'public' %>
</div>

<% end %>
</div>